<%= form_for @user do |f| %>
  <%= render 'shared/errors', obj: @user %>
  <div class="control-group">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div class="control-group">
    <%= f.label :password %>
    <%= f.text_field :password %>
  </div>
  <%= f.submit create_or_update(@user), class: "btn btn-success" %>
<% end %>
