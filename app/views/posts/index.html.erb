<%= render 'shared/content_title', title: 'All the posts' %>

<% @posts.each do |post|  %>
  <div class="row">
   <div class='span8 well'>


    <%= render post.categories %>
    <h4><%= link_to post.title, post.url %></h4>
     <p><%#= post.description %></p>
     <p>
      <span class='quiet'>posted by</span> <%= post.creator.username %>
       <small>at <%= post.created_at %></small>
       <small>
        <span>
          <%= link_to("#{post.comments.size} comments", post_comments_path(post)) %>
        </span>
       </small>
     </p>
    </div>
  </div>
<% end %>


