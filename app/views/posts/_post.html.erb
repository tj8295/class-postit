<div class="row">
  <div class='span0 well text-center'>
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: true, something: 'man'), method: 'post' do %>
        <i class='icon-arrow-up'></i>
      <% end %>
    <% end %>
    <p><%= post.total_votes %></p>
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: false), method: 'post' do %>
        <i class='icon-arrow-down'></i>
      <% end %>
    <% end %>
  </div>
  <div class='span8 well'>
    <%= render post.categories %>
    <h4><%= link_to post.title, fix_url(post.url) %></h4>
    <p><%#= post.description %></p>
    <p>
      <span class='quiet'>posted by</span>
      <%= post.creator.username %>
      <small>at
        <%= display_datetime(post.created_at) %></small>
      <small>
        <span>
          <%= link_to("#{post.comments.size} comments", post_path(post)) %>
        </span>
      </small>
        <p>
          <% if logged_in? %>
            [<%= link_to('edit', edit_post_path(post))  %>]
          <% end %>
        </p>
    </p>
  </div>
</div>

