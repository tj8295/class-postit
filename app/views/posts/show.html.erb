<p class="pull-right">
  [<%= link_to 'edit this post', edit_post_path(@post) %>]
</p>

<p>
  <%= render @post.categories %>
</p>
<h4>Hi there, you are viewing
  <%= link_to @post.title, fix_url(@post.url) %></h4>
<%#= render 'shared/content_title', title: @post.title %>
<p>
  <%= @post.description %>
  <hr />
</p>
<small>by <%= @post.creator.username %></small>

<%= form_for [@post, @comment] do |f| %>
<!-- /posts/3/comments -->
  <%= render 'shared/errors', obj: @comment %>
  <div class='control-group'>
    <%= f.label :body, 'Leave a comment' %>
    <%= f.text_area :body, rows: 3, class: 'span4' %>
  </div>
  <%= f.submit 'Create comment', class: 'btn btn-primary' %>
<% end %>

<h5>Comments:</h5>

<% @post.comments.each do |comment| %>
  <div class="well span8">
    <em>"<%= comment.body %>"</em>
    <span class='quiet'> by</span> <%= comment.creator.username %>
       <small>at <%= display_datetime(comment.created_at) %></small>
  </div>
<% end %>




























